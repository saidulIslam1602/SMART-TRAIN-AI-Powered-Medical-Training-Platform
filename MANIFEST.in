# SMART-TRAIN AI Platform - Package Manifest
# Industry-standard MANIFEST.in for Python packaging

# Include documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include pyproject.toml
include setup.cfg
include Makefile

# Include package data
recursive-include src/smart_train *.yaml *.yml *.json
recursive-include src/smart_train *.txt *.md

# Include configuration
recursive-include config *.yaml *.yml *.json

# Include examples
recursive-include examples *.py *.yaml *.md

# Include scripts
recursive-include scripts *.py *.sh

# Include tests
recursive-include tests *.py

# Include documentation
recursive-include docs *.md *.rst *.txt

# Exclude development files
exclude .gitignore
exclude .env*
exclude *.log

# Exclude cache and temporary files
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

# Exclude data directories (too large for package)
prune data/
prune datasets/raw/
prune datasets/processed/
prune logs/
prune tmp/

# Exclude IDE files
prune .vscode/
prune .idea/
